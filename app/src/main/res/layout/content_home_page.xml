<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0px"
    android:paddingRight="0px"
    android:paddingTop="0px"
    android:paddingBottom="0px"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home_page"
    tools:context="cs551.baldeep.keepfit.HomePage"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TabHost
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tabhost">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/tabhome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/activity_vertical_margin">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:text="@string/your_daily_goal_heading"
                                            android:textSize="@dimen/text_sub_title_size"
                                            android:textColor="@android:color/black"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/dailyGoalHeading"/>

                                        <View
                                            android:background="#aaaaaa"
                                            android:layout_width = "fill_parent"
                                            android:layout_height="1dp"
                                            android:layout_centerVertical ="true"
                                            android:layout_alignParentTop="true"/>

                                        <TextView
                                            android:text="@string/no_goals_have_been_created_yet"
                                            android:textSize="@dimen/text_title_size"
                                            android:layout_marginTop="2dp"
                                            android:textColor="@android:color/black"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:id="@+id/currentGoalName" />


                                    </LinearLayout>

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="5dp"
                                        android:id="@+id/currentGoalMetIcon"/>

                                </LinearLayout>


                                <com.eralp.circleprogressview.CircleProgressView
                                    android:id="@+id/circle_progress_view"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:layout_height="160dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    app:cpv_circle_color="@color/colorPrimary"
                                    app:cpv_circle_width="9dp"
                                    app:cpv_background_circle_width="1dp"
                                    app:cpv_background_circle_color="#5b253048"
                                    app:cpv_text_prefix=""
                                    app:cpv_text_size="20"
                                    app:cpv_text_color="@color/colorPrimary" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="right"
                                    android:visibility="gone">

                                    <TextView
                                        android:text="0"
                                        android:textSize="15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/progressDone"/>

                                    <TextView
                                        android:text="/"
                                        android:textSize="15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:text="0"
                                        android:textSize="15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/progressMax"/>

                                    <TextView
                                        android:text=" "
                                        android:textSize="15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:text="Steps"
                                        android:textSize="15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/progressUnits"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@android:color/black"
                                        android:textSize="20sp"
                                        android:text="@string/your_goals_heading"/>

                                </LinearLayout>

                                <View
                                    android:background="#aaaaaa"
                                    android:layout_width = "fill_parent"
                                    android:layout_height="1dp"
                                    android:layout_centerVertical ="true"
                                    android:layout_alignParentTop="true"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_sub_title_size"
                                    android:textColor="@android:color/black"
                                    android:text="@string/no_goals_have_been_created_yet"
                                    android:layout_marginTop="5dp"
                                    android:id="@+id/txt_no_goals_list_replacement"/>

                                <ListView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="7dp"
                                    android:id="@+id/listview_goals"
                                    android:divider="#aaaaaa"
                                    android:dividerHeight="1dp"
                                    android:footerDividersEnabled="true"
                                    android:headerDividersEnabled="true">

                                </ListView>

                            </LinearLayout>

                        </ScrollView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tabhistory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Your past activity:"/>

                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="7dp"
                            android:id="@+id/listview_activityhistory">

                        </ListView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tabstats"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Stats Tab"/>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>

    </RelativeLayout>

</RelativeLayout>
